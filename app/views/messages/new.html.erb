<div class="container">
	<div class="message-wrapper">
		<h1>New Message</h1>
		<%= form_for @message do |f| %>
			<div class="form-group">
				<%= f.label "Select a recipient" %>
				<%= f.select :recipient_id, User.recipient_options(current_user), {}, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.text_area :body, class: 'form-control', placeholder: "Your message goes here" %>
			</div>
			<%= f.submit "Send Message", class: "btn btn-secondary" %>
		<% end %>
	</div>
</div>
