
<div class="container">
	<%= link_to "Back to inbox", :back %>
	<div class="inbox-wrapper">
		<h1>Sent</h1>
		<table class="table">
		  <thead>
		    <tr>
		      <th>From</th>
		      <th>Message</th>
		      <th>Recieved at</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% if @messages.count > 0 %>
		      <%= render @messages %>
		    <% else %>
		      <h1>you currently have no messages</h1>
		    <% end %>
		    </tbody>
		</table>
	</div>
</div>
