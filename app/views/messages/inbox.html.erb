<div class="container">
  <div class="inbox-wrapper">

    <%= link_to "New Chat", new_message_path, class: "btn btn-primary" %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
  <h1>Your messages</h1>
  <table class="table">
    <thead>
      <tr>
        <th>From</th>
        <th>Message</th>
        <th>Recieved at</th>
      </tr>
    </thead>
    <tbody>
      <% if @messages.count > 0 %>
        <%= render @messages %>
      <% else %>
        <h1>you currently have no messages</h1>
      <% end %>
      </tbody>
  </table>
  </div>
</div>
